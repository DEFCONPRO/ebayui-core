{
    "include": ["src", "src/**/*.json"],
    "exclude": [
        "**/*.stories.ts",
        "**/*.stories-ignore.ts",
        "**/test/*",
        "**/examples/*"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "lib": ["dom", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES6",
        "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
    }
}
