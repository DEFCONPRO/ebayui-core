import processHtmlAttributes from "../../common/html-attributes"

static var ignoredAttributes = ["class", "style", "type", "number"];

$ var number = Math.round(input.number);
$ var ariaRole = input.type !== "menu" && input.type !== "icon" && "img";

<if(number > 0)>
    <span
        ...processHtmlAttributes(input, ignoredAttributes)
        role=ariaRole
        class=["badge", input.class]
        style=input.style>
        ${number > 99 ? "99+" : number}
    </span>
</if>
