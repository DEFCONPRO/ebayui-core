import processHtmlAttributes from "../../common/html-attributes"

static {
    var ignoredAttributes = ["class", "style", "type", "number"];
}

$ var number = Math.round(data.number);
$ var ariaRole = data.type !== "menu" && data.type !== "icon" && "img";
<if(number > 0)>
    <span
        ...processHtmlAttributes(data, ignoredAttributes)
        role=ariaRole
        class=["badge", data.class]
        style=data.style>
        ${number > 99 ? "99+" : number}
    </span>
</if>
